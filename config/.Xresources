!-*- Perl extensions -*-
URxvt.perl-ext-common: default,font-size

URxvt*scrollBar: false

!URxvt.font: xft:FantasqueSansMono Nerd Font:size=12

!URxvt*font: xft:Sauce Code Pro Nerd Font:size=12:antialias=true:hinting=true
URxvt*font: xft:Source\ Code\ Pro\ Medium:size=12:antialias=true:hinting=true

URxvt*depth: 32
URxvt*internalBorder: 20
URxvt.cursorBlink: 1

URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset

URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! remap copy / paste shortcuts
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:
! disable ugly yellow box
URxvt.iso14755 : false

Xft.dpi: 120
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! special
*.foreground:   #bfddb2
*.background:   #2a2f33
*.cursorColor:  #bfddb2

! black
*.color0:       #504945
*.color8:       #504945

! red
*.color1:       #ea5252
*.color9:       #ea5252

! green
*.color2:       #ACB765
*.color10:      #ACB765

! yellow
*.color3:       #c1bf89
*.color11:      #c1bf89

! blue
*.color4:       #82abbc
*.color12:      #82abbc

! magenta
*.color5:       #b18a97
*.color13:      #b18a97

! cyan
*.color6:       #88b482
*.color14:      #89b482

! white
*.color7:       #bfddb2
*.color15:      #bfddb2