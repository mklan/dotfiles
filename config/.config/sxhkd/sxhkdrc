#
# wm independent hotkeys
#

# description: display shortcuts
super + h
	sxkhkd-bindings d

# description: open terminal emulator
super + Return
	urxvt

super + alt + Return
	~/.config/bspwm/spawn_float.sh urxvt 1550 400 500 -1

# description: app launcher
super + d
	rofi -show run

# description: vscode project launcher
super + c
	vscode-projects

# description: shutdown menu
super + alt + q
	power-menu "bspc quit"

# description: reload sxhkd
super + Escape
	notify-send "sxhkd restarted"; \
	pkill -USR1 -x sxhkd


#
# bspwm hotkeys
#

# quit/restart bspwm
# shift + alt + {q,r}
#	bspc {quit,wm -r}

# description: restart bspwm
shift + alt + r
	bspc wm -r; \
	notify-send "bspwm restart";

# close and kill
#super + {_,shift + }q
#	bspc node -{c,k}

# description: close window
alt + shift + q
	bspc node -c

# alternate between the tiled and monocle layoutforeground
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# description: Toggle floating
super + space
    bspc node focused -t tiled -g sticky=off || bspc node focused -t floating; \
		bspc node -f

# description: Rotate windows
super + e
    bspc node @parent -R 90; \
#		bspc node -f last

# Rotate the tree from the current nodes parent
super + control + {Right, Left}
  bspc node @parent -C {forward, backward}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


# description: corner float mode
super + alt + z
  ~/.config/bspwm/corner-float-node

#
# focus/swap
#

# focus the node in the given direction
#super + {_,shift + }{h,j,k,l}
#	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# cicle trough desktops
super + {grave,Tab}
	bspc {node,desktop} -f next.occupied.local

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
# super + {_,shift + }{1-9,0}
# 	bspc {desktop -f,node -d} focused:^{1-9,10}
# 	#bspc {desktop -f,node -d} ^{1-9,10}


# move desktop to focused monitor
alt + {1-9,0}
	bspc desktop {1-9,10} --to-monitor focused -f

# move node to desktop
alt + shift + {1-9,0}
    bspc node -d {1-9,10}

# focus desktop
super + {1-9,0}
	bspc desktop -f {1-9,10}

# move node to desktop and focus
super + shift + {1-9,0}
    bspc node -d {1-9,10} -f

super + {odiaeresis,adiaeresis}
    bspc monitor ^{1-2} -f

#
# gaps
#

# inner
super + alt + plus
    g="$(bspc config -d focused  window_gap)"; [[ $g -gt 0  ]] && bspc config -d focused window_gap $(( $g-10 )) 
super + alt + minus
    g="$(bspc config -d focused  window_gap)"; bspc config -d focused window_gap $(( $g+10 )) 


#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

super + alt + {Left,Down,Up,Right}
  ~/.config/bspwm/bspwm_resize.sh {west,south,north,east} 30
#  ~/.config/bspwm/resize.transition.sh {west,south,north,east} 30

super + alt + shift + {Left,Down,Up,Right}
  # TODO: resize on top + left edges
  # ~/.config/bspwm/bspwm_resize.sh {west,south,north,east} 30

super + shift + {Left,Down,Up,Right}
  ~/.config/bspwm/move {west,south,north,east}

#
# mouse bindings
# __________________

~button1
	DidIClickDesktop.sh && gapgrab

# Middle
~button2
	DidIClickDesktop.sh && mygtkmenui -- ~/.config/GTKmenu/BspwmDesktopMenui


# FN-keys

XF86AudioMute
	pulseaudio-control togmute

XF86Audio{Raise,Lower}Volume
	pulseaudio-control --volume-max 130 {up,down}

XF86AudioMicMute
	amixer set Capture toggle

XF86MonBrightness{Down,Up}
		brightness {-3,3}


super + XF86MonBrightness{Down,Up}
	brightness {-1,1}

# Lock

super + l 
	lock

super + alt + l
	sleep 0.5; \
	xset dpms force off; \
	lock

# Screenshot

super + Print
	mkdir -p $HOME/Screenshots && flameshot gui -p $HOME/Screenshots
	

# Messenger
super + alt + m
	firefox -P Social
	